@model Generwell.Web.ViewModels.SignInViewModel
@{
    ViewBag.Title = "Generwell";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    string error = (TempData["ServerError"] != null) ? TempData["ServerError"].ToString() : string.Empty;
}

<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        loginPage.initialize();
    });
</script>

<!-- Loading Modal Start here-->
@Html.Partial("_LoadingPopup")
<!-- Modal ends Here -->

<div class="container center-screen">
    <div class="row">
        <div class="Absolute-Center is-Responsive">
            <div class="col-sm-12 col-md-10 col-sm-12 col-xs-12 col-md-offset-1">
                <div class="col-md-12 form-group logotext col-sm-12 col-xs-12">
                    <h1 class="text-center">Generwell</h1>
                </div>
                <form asp-controller="Accounts" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post">
                    <div id="error" class="text-red">@error</div>
                    <span class="text-blue field-validation-error" data-valmsg-replace="true" data-valmsg-for="UserName"></span>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input asp-for="UserName" class="form-control" placeholder = "UserName" />
                    </div>
                    <span class="text-blue field-validation-error" data-valmsg-replace="true" data-valmsg-for="Password"></span>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                    </div>
                    <span class="text-blue field-validation-error" data-valmsg-replace="true" data-valmsg-for="WebApiUrl"></span>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input asp-for="WebApiUrl" class="form-control" placeholder="WebApiUrl" />
                    </div>
                    <div class="form-group">
                        <button type="submit" id="submitData" value="Login" class="btn login-button btn-block">Login</button>
                    </div>
                    <div class="form-group text-center">
                        <a id="supportId" href="#">Support</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


