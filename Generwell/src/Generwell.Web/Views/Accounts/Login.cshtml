@model Generwell.Web.ViewModels.SignInViewModel
@{
    ViewBag.Title = "Generwell";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    string error = (TempData["ServerError"] != null) ? TempData["ServerError"].ToString() : string.Empty;
}

<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        loginPage.initialize();
    });
</script>

<div class="container center-screen">
    <div class="row">
        <div class="Absolute-Center is-Responsive">
            <div class="col-sm-12 col-md-10 col-sm-12 col-xs-12 col-md-offset-1">
                <div class="col-md-12 form-group logotext col-sm-12 col-xs-12">

                    <h1 class="text-center">Generwell</h1>
                </div>
                <form id="loginPageForm" method="post" action="">
                    <div id="error" class="text-red">@error</div>
                    @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text-red" })
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "UserName" })
                    </div>

                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-red" })
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>

                    @Html.ValidationMessageFor(model => model.WebApiUrl, null, new { @class = "text-red" })
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.TextBoxFor(model => model.WebApiUrl, new { @class = "form-control", placeholder = "Url" })
                    </div>

                    <div class="form-group">
                        <button type="submit" id="submitData" value="Login" class="btn login-button btn-block">Login</button>
                        @*<button type="button" id="submitData" value="Login" class="btn btn-def btn-block" onclick="loginPage.MakeAjax('/Accounts/Login', $('#loginPageForm :input'),this)">Login</button>*@
                    </div>
                    <div class="form-group text-center">
                        <!-- Trigger the modal with a button -->
                        <a id="supportId" href="#">Support</a>
                        @*<img src="~/images/support.png" />*@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

