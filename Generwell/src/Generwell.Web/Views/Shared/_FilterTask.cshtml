                    <span class="ml-20"><input type="checkbox" id="IsFavorite" name="IsFavorite" class="ui-checkboxradio-checked" value=""> My Tasks<br></span>
                </div>
                <br />
                <div class="ibox-content">
                    @*@if (Model.Count()==0)
                        {
                            @Html.RenderPartialAsync("_NoData");
                        }
                        else
                        {*@
                    <table id="taskListTableId" class="table table-striped table-bordered table-hover wellListDataTable" style="width:100%;">
                        <thead>
                            <tr>
                                @*<th>Id</th>*@
                                <th>Status</th>
                                <th>Task Name</th>
                                <th>Activated Date</th>
                                <th>Forecast Date</th>
                                <th>Due Date</th>
                                <th>Assigned To</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeU" style="cursor:pointer;width:70%">
                                        @*<td>@item.id</td>*@
                                        <td style="width:5%;">

                                            @*    @item.Status*@
                                            @{
                                                if (@item.Completed == GenerwellConstants.Constants.Status)
                                                {
                                                    <img src="@Url.Content("~/images/active.png")" />
                                                }
                                                else
                                                {

                                                }
                                            }
                                        </td>
                                        <td style="width:25%;">@item.Name</td>
                                        <td style="width:10%;">@item.ActivatedDate</td>
                                        <td style="width:10%;">@item.ForecastDate</td>
                                        <td style="width:10%;">@item.ExpectedCompletionDate</td>
                                        <td style="width:10%;">@item.AssigneeName</td>

                                    </tr>
                                                }
                                                }
                                                else
                                                {
                                                    <tr class="gradeU">
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                    </tr>

                                                }
                        </tbody>
                    </table>
                    @* }*@
                </div>
