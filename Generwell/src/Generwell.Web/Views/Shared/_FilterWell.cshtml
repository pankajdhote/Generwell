@model List<Generwell.Modules.ViewModels.WellViewModel>
@using Generwell.Modules.GenerwellConstants;

<script type="text/javascript">
    $(document).ready(function () {
        var targetUrl = '/WellLineReport/Index/';
        wellPage.initialize(targetUrl);
    });
</script>


<table id="wellListTableId" class="table-striped table table-bordered table-hover scrolable-div table-responsive wellListDataTable dataTable no-footer" style="width:100%;">
    <thead>
        <tr>
            <th>Id<i class="fa fa-fw fa-sort"></i></th>
            <th class="text-center">Followed Wells<i class=""></i></th>
            <th>Well Name<i class="fa fa-fw fa-sort"></i></th>
            <th class="text-center">Bottomhole Location<i class="fa fa-fw fa-sort"></i></th>
            <th class="text-center">Surface Location<i class="fa fa-fw fa-sort"></i></th>
            <th class="text-center">Active Task Count<i class="fa fa-fw fa-sort"></i></th>
            <th class="text-center">Lattitude<i class="fa fa-fw fa-sort"></i></th>
            <th class="text-center">Longitude<i class="fa fa-fw fa-sort"></i></th>
            <th class="text-center">IsFavorite<i class="fa fa-fw fa-sort"></i></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr class="gradeU">
                    <td>@item.id</td>
                    <td id="followedWell" class="text-center h-20">
                    @if (item.isFavorite == true)
                    {
                        <img id="false" name="@item.id" src = "/images/mywell-selected.png" />
                    }
                    else
                    {
                        <img id="true" name="@item.id" src = "/images/mywell-disable.png" />
                    }
                    </td>
                    <td>@item.name</td>
                    <td class="text-center">@item.bottomHoleLocation</td>
                    <td class="text-center">@item.surfaceHoleLocation</td>
                    <td class="text-center">@item.activeTaskCount</td>
                    <td class="text-center">@item.latitude</td>
                    <td class="text-center">@item.longitude</td>
                    <td class="text-center">@item.isFavorite</td>
                </tr>
            }
        }
        else
        {
            <tr class="gradeU">
                <td>@Constants.NoData</td>
                <td>@Constants.NoData</td>
                <td>@Constants.NoData</td>
                <td>@Constants.NoData</td>
                <td>@Constants.NoData</td>
                <td>@Constants.NoData</td>
                <td>@Constants.NoData</td>
                <td>@Constants.NoData</td>
                <td>@Constants.NoData</td>
            </tr>

        }
    </tbody>
</table>





