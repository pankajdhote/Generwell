@model List<Generwell.Web.ViewModels.TaskFieldsViewModel>
@using Generwell.Modules.GenerwellConstants;
@using Generwell.Modules.Global;

<script type="text/javascript">
    $(document).ready(function () {
        TaskDetailsPage.initialize(@GlobalFields.TaskId);

    });

    $(document).ready(function () {
        @if (Model.Count() > 0)
          {
                @foreach (var item in Model)
                {
                     @if (@item.fieldControlType == 2) {

                          @if (@item.permissionId == 2 || @item.permissionId == 9 || @item.permissionId == 1)
                          {
                                 @:  $('.displayValue').prop("disabled", true)

                              }
                          @if (@item.permissionId == 0)
                          {
                                 @:  $('.displayValue').prop("visible", false)

                              }

                          }
                     @if (@item.fieldControlType == 0) {

                          @if (@item.permissionId == 2 || @item.permissionId == 9)
                          {
                                 @:  $('.displayValue').prop("disabled", false)

                              }
                          }



                     }
          }

    });

</script>

<table id="taskDetailsListTableId" class="table table-striped table-bordered table-hover taskListDataTable" style="width:100%;">
    <thead>
        <tr>  
                     
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                 {
                     @if (@item.fieldControlType != 2)
                    {
                         @if (@item.permissionId == 2 || @item.permissionId == 9)
                        {
                             @Html.HiddenFor(model => @item.fieldId, new
                             { id = "FieldId" });
                         }
                     }
                 }
             }
            <th>Field Description<i class="fa fa-fw fa-sort"></i></th>
            <th>Display Value<i class="fa fa-fw fa-sort"></i></th>
            <th>Field Description<i class="fa fa-fw fa-sort"></i></th>
            <th>Display Value<i class="fa fa-fw fa-sort"></i></th>
        </tr>
    </thead>

    <tbody>
        @*For Display Value field I took controls as per "fieldTypeId" value. just took for 2 values( text and look up(dropdown)*@
        @if (Model.Count() > 0)
        {

            int count = 1;
            @foreach (var item in Model)
            {


                @if (@item.permissionId != 0)
                {
                    if (count % 2 == 1)
                    {
                        @:<tr class="gradeU">
                            <td><b>@item.fieldDesc</b></td>

                            @if (@item.fieldTypeId == 1 || @item.fieldTypeId == 8)
                            {
                               
                                <td class="displayValue1">
                                    @Html.TextBoxFor(model => @item.value, new { @class = "datepicker", @type = "date"})
                                </td>
                            }
                            @if (@item.fieldTypeId == 2)
                            {
                                <td class="displayValue1">
                                    @Html.DropDownListFor(model => @item.displayValue, new SelectList(
new List<Object>{
                       new { value = 1 , text = @item.displayValue, @id = "displayValue", @class = "form-control btn button dropdown dropdown-toggle w-10 mr-20"}

},
"value",
"text",
2), "--select--")
                                   
                                </td>
                            }
                            @if (@item.fieldTypeId == 3)
                            {
                                <td class="displayValue1">
                                    @Html.TextBoxFor(model => @item.displayValue, new { @name = "textbox1", @id = "displayValue" })
                                </td>
                            }


                            @if (@item.fieldTypeId == 4)
                            {
                                <td class="displayValue1">
                                    @Html.TextBoxFor(model => @item.value, new { @Max = "100", @id = "displayValue"})
                                </td>
                            }
                            @if (@item.fieldTypeId == 5)
                            {
                                <td class="displayValue1">
                                    @if (@item.value != null)
                                {
                                        @if (@item.value == "0.0")
                                        {
                                            <div class="i-checks chk border-bottom pt-pb-20">
                                                <span class=""><input type="checkbox" id="IsFavorite" name="IsFavorite" /></span>
                                            </div>
                                        }
                                        @if (@item.value == "1.0")
                                    {
                                            @Html.CheckBox("displayValue", true)
                                        }                                        
                                    }
                                </td>
                            }

                            @if (@item.fieldTypeId == 6)
                            {
                                <td class="displayValue1">
                                    @Html.DropDownListFor(model => @item.displayValue, new SelectList(
new List<Object>{
                       new { value = 1, text = @item.displayValue, @id = "displayValue",  @class = "form-control btn button dropdown dropdown-toggle w-10 mr-20"  }

},
"value",
"text",
2), "--select--")

                                </td>
                            }

                            @if (@item.fieldTypeId == 7)
                            {
                                <td class="displayValue1">
                                    @Html.TextBoxFor(model => @item.displayValue, new { @name = "textbox1", @id = "displayValue", @Max = "100" })
                                </td>
                            }
                            @if (@item.fieldTypeId == 9)
                            {
                                <td class="displayValue1">
                                    @Html.DisplayFor(model => @item.value, new { @name = "textbox1", @id = "displayValue"})
                                </td>
                            }

                            @if (@item.fieldTypeId == 11 || @item.fieldTypeId == 12 || @item.fieldTypeId == 13)
                            {
                                <td class="displayValue1">
                                    @Html.DisplayFor(model => @item.displayValue, new { @name = "textbox1", @id = "displayValue" })
                                </td>
                            }
                            @if (@item.fieldTypeId == 10)
                            {
                                <td class="displayValue1">
                                    @Html.TextBoxFor(model => @item.displayValue, new { @name = "textbox1", @id = "displayValue" })
                                </td>
                            }
                            @if (@item.fieldTypeId == 14)
                            {
                                <td class="displayValue1">
                                    <a href="@Url.Action("model => @item.displayValue", "TaskDetails")" class="elements" target="_blank">
                                        <span>@item.displayValue</span>
                                    </a>
                                </td>
                            }
                    }

                    @if (count % 2 == 0)
                    {
                      
                        <td><b>@item.fieldDesc</b></td>

                        @if (@item.fieldTypeId == 1 || @item.fieldTypeId == 8)
                        {
                            <td class="displayValue1">
                                @Html.TextBoxFor(model => @item.value, new { @class = "datepicker", @type = "date" })
                            </td>
                        }
                                               

                        @if (@item.fieldTypeId == 2)
                        {
                            <td class="displayValue1">
                                @Html.DropDownListFor(model => @item.displayValue, new SelectList(
new List<Object>{
                       new { value = 1 , text = @item.displayValue, @id = "displayValue",  @class = "form-control btn button dropdown dropdown-toggle w-10 mr-20" }

},
"value",
"text",
2), "--select--")
                            </td>
                        }
                        @if (@item.fieldTypeId == 3)
                            {
                            <td class="displayValue1">
                                @Html.TextBoxFor(model => @item.displayValue, new { @name = "textbox1", @id = "displayValue" })
                            </td>
                        }
                        @if (@item.fieldTypeId == 4)
                        {
                            <td class="displayValue1">
                                @Html.TextBoxFor(model => @item.value, new { @name = "textbox1", @id = "displayValue", @Max = "100" })
                            </td>
                        }
                        @if (@item.fieldTypeId == 5)
                        {
                            <td class="displayValue1">
                                @Html.TextBoxFor(model => @item.value, new { @Max = "100", @id = "displayValue" })
                            </td>
                        }
                        @if (@item.fieldTypeId == 6)
                        {
                            <td class="displayValue1">
                                @Html.DropDownListFor(model => @item.displayValue, new SelectList(
new List<Object>{
                       new { value = 1 , text = @item.displayValue, @id = "displayValue" }

},
"value",
"text",
2), "--select--")
                            </td>
                        }
                        @if (@item.fieldTypeId == 7)
                        {
                            <td class="displayValue1">
                                @Html.TextBoxFor(model => @item.displayValue, new { @name = "textbox1", @id = "displayValue", @Max = "100" })
                            </td>
                        }
                        @if (@item.fieldTypeId == 9)
                        {
                            <td class="displayValue1">
                                @Html.DisplayFor(model => @item.value, new { @name = "textbox1", @id = "displayValue" })
                            </td>
                        }

                        @if (@item.fieldTypeId == 11 || @item.fieldTypeId == 12 || @item.fieldTypeId == 13)
                        {
                            <td class="displayValue1">
                                @Html.DisplayFor(model => @item.value, new { @name = "textbox1", @id = "displayValue" })
                            </td>
                        }
                        @if (@item.fieldTypeId == 10)
                        {
                            <td class="displayValue1">
                                @Html.TextBoxFor(model => @item.displayValue, new { @name = "textbox1", @id = "displayValue" })
                              
                            </td>
                        }
                        @if (@item.fieldTypeId == 14)
                            {
                            <td class="displayValue1">

                                <a href="@Url.Action("model => @item.displayValue", "TaskDetails")" class="elements" target="_blank">
                                    <span>@item.displayValue</span>
                                </a>

                            </td>
                        }

                        @: </tr>
                }
                }
                count++;
            }
        }

        else
        {
            <tr class="gradeU">
                <td class="displayValue1">@GenerwellConstants.Constants.NoData</td>
                <td class="displayValue1">@GenerwellConstants.Constants.NoData</td>
                <td class="displayValue1">@GenerwellConstants.Constants.NoData</td>
            </tr>
        }


    </tbody>
</table>
<div>
    <button id="SaveTaskFieldDetailsId" type="submit" name="Save" value="Save" class="btn button taskdetailsbuttons">Save</button>
</div>





