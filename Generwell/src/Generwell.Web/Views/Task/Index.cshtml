@model List<Generwell.Web.ViewModels.TaskViewModel>


@{
    ViewBag.Title = "DataTables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Loading Modal Start here-->
<div class="modal fade bs-example-modal-sm" id="myPleaseWait" tabindex="-1"
     role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span class="glyphicon glyphicon-time">
                    </span>Please Wait
                </h4>
            </div>
            <div class="modal-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-info
                    progress-bar-striped active"
                         style="width: 100%">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal ends Here -->

<div class="wrapper wrapper-content animated fadeInRight mr-20 ml-20">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h2>Task Listing</h2>
                </div>
                <div class="dropdown">
                    <span class="ml-20"><input type="checkbox" id="IsFavorite" name="IsFavorite" class="ui-checkboxradio-checked" value=""> My Tasks<br></span>
                </div>
                <br />
                <hr />
                <div id="taskTableDivId" class="ibox-content">
                    @Html.Partial("_FilterTask", Model)
                </div>
            </div>
        </div>
    </div>
</div>
