@model List<Generwell.Web.ViewModels.TaskViewModel>
@using Generwell.Modules.GenerwellConstants;

@{
    ViewBag.Title = "DataTables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        wellPage.initialize();
        var targetUrl = '';
        dataTable.initialize(taskListTableId, targetUrl);

    });
</script>



<!-- Loading Modal Start here-->
<div class="modal fade bs-example-modal-sm" id="myPleaseWait" tabindex="-1"
     role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span class="glyphicon glyphicon-time">
                    </span>Please Wait
                </h4>
            </div>
            <div class="modal-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-info
                    progress-bar-striped active"
                         style="width: 100%">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal ends Here -->

<div class="wrapper wrapper-content animated fadeInRight mr-20 ml-20">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h2>Task Listing</h2>
                </div>
                <div class="dropdown">
                    @*<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                            Dropdown Example
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#">Filter-1</a></li>
                            <li><a href="#">Filter-2</a></li>
                            <li><a href="#">Filter-3</a></li>
                        </ul>*@
                    <span class="ml-20"><input type="checkbox" id="IsFavorite" name="IsFavorite" class="ui-checkboxradio-checked" value=""> My Tasks<br></span>
                </div>
                <br />
                <div class="ibox-content">
                    @*@if (Model.Count()==0)
                        {
                            @Html.RenderPartialAsync("_NoData");
                        }
                        else
                        {*@
                    <table id="taskListTableId" class="table table-striped table-bordered table-hover wellListDataTable" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Status</th>
                                <th>Task Name</th>
                                <th>Activated Date</th>
                                <th>Forecast Date</th>                               
                                <th>Due Date</th>
                                <th>Assigned To</th>                                
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeU">
                                        <td>@item.id</td>
                                        <td>
                                        @*    @item.Status*@
                                       @{ 
                                           if(@item.Status == GenerwellConstants.Constants.Status)
                                            {                                           
                                            <img src="@Url.Content("~/images/active.png")"/>
                                           }
                                           else
                                           {

                                           }
                                    }
                                        </td>  
                                        <td>@item.Name</td>       
                                        <td>@item.ActivatedDate</td>  
                                        <td>@item.ForecastDate</td>                                       
                                        <td>@item.ExpectedCompletionDate</td>
                                        <td>@item.AssigneeName</td>
                                                                     
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr class="gradeU">
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                    @* }*@
                </div>
            </div>
        </div>
    </div>
</div>


