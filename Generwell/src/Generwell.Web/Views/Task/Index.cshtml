@model List<Generwell.Web.ViewModels.TaskViewModel>
@using Generwell.Modules.GenerwellConstants;

@{
    ViewBag.Title = "DataTables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        taskPage.initialize();
        var targetUrl = '/TaskDetails/Index/';
        dataTable.initialize(taskListTableId, targetUrl);

    });
</script>

<!-- Loading Modal Start here-->
@Html.Partial("_LoadingPopup")
<!-- Modal ends Here -->

<div class="container wrapper wrapper-content animated fadeInRight mr-20 ml-20">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h2>Task Listing</h2>
                </div>
                <div class="dropdown">

                    <span class="ml-20"><input type="checkbox" id="IsFavorite" name="IsFavorite" class="ui-checkboxradio-checked" value=""> My Tasks<br></span>
                </div>
                <br />
                <div class="ibox-content">
                    <table id="taskListTableId" class="table table-striped table-bordered table-hover wellListDataTable" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Status</th>
                                <th>Task Name</th>
                                <th>Activated Date</th>
                                <th>Forecast Date</th>
                                <th>Due Date</th>
                                <th>Assigned To</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeU">
                                        <td>@item.id</td>
                                        <td>
                                            @*    @item.Status*@
                                            @{
                                                if (@item.Status == GenerwellConstants.Constants.Status)
                                                {
                                                    <img src="@Url.Content("~/images/active.png")" />
                                                }
                                                else
                                                {

                                                }
                                            }
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.ActivatedDate</td>
                                        <td>@item.ForecastDate</td>
                                        <td>@item.ExpectedCompletionDate</td>
                                        <td>@item.AssigneeName</td>

                                    </tr>
                                                }
                                                }
                                                else
                                                {
                                                    <tr class="gradeU">
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                        <td>@GenerwellConstants.Constants.NoData</td>
                                                    </tr>

                                                }
                        </tbody>
                    </table>
                    @* }*@
                </div>
            </div>
        </div>
    </div>
</div>
