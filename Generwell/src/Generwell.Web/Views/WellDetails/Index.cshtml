@model List<Generwell.Modules.ViewModels.FieldsViewModel>
@using Microsoft.AspNetCore.Http;
@using Generwell.Modules.GenerwellConstants;

@{
    ViewBag.Title = "Well Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        wellDetailsPage.initialize();
    });
</script>

<!-- Loading Modal Start here-->
@Html.Partial("_LoadingPopup")
<!-- Modal ends Here -->

<div class="container wrapper wrapper-content animated fadeInRight mr-20 ml-20">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-right user-name"><label>Welcome &nbsp;</label>@Context.Session.GetString("UserName")</div>
            <div class="ibox float-e-margins">
                <div class="ibox-title border-bottom">
                    <h4><img src="~/images/welldetails-icon.png" class="pb-5" />&nbsp;Well Details</h4>
                    <label>Well: </label>  @Context.Session.GetString("WellName")
                </div>
                <div id="followCheckDiv" class="i-checks chk border-bottom pt-pb-20">
                    <span class=""><input type="checkbox" id="followWellId" name="followWell" class="ui-checkboxradio-checked" @Context.Session.GetString("IsFollow")  value=""> Followed Wells<br></span>
                </div>
                <div class="ibox-content pt form-group">
                    <table id="wellDetailsListTableId" class="table table-striped table-bordered table-hover wellDetailsListTableDataTable" style="width:100%;">
                        <thead>
                            <tr>
                                <th class="wd-width25">Id<i class="fa fa-fw fa-sort"></i></th>
                                <th class="wd-width25">Name<i class="fa fa-fw fa-sort"></i></th>
                                <th class="wd-width25">Value<i class="fa fa-fw fa-sort"></i></th>
                                <th class="wd-width25">Id<i class="fa fa-fw fa-sort"></i></th>
                                <th class="wd-width25">Name<i class="fa fa-fw fa-sort"></i></th>
                                <th class="wd-width25">Value<i class="fa fa-fw fa-sort"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                int count = 1;
                                @foreach (var item in Model)
                                {
                                    @if (count % 2 == 1)
                                    {
                                        @:<tr class="gradeU">
                                            <td>@item.id</td>
                                            <td>@item.description</td>
                                            <td><label>@item.value</label></td>
                                    }
                                    @if (count % 2 == 0)
                                    {
                                                <td>@item.id</td>
                                                <td>@item.description</td>
                                                <td><label>@item.value</label></td>
                                            @:</tr>
                                            }
                                    count++;
                                }
                            }
                            else
                            {
                                <tr class="gradeU">
                                    <td>@Constants.NoData</td>
                                    <td>@Constants.NoData</td>
                                    <td>@Constants.NoData</td>
                                    <td>@Constants.NoData</td>
                                    <td>@Constants.NoData</td>
                                    <td>@Constants.NoData</td>
                                </tr>
                            }
                        </tbody>
                    </table>                                       
                </div>
                <div class="float-right form-group"><img id="moveTop" src="~/images/back-to-top.png" class="h-fourty"/></div>
            </div>
        </div>
    </div>
</div>
