@model List<Generwell.Web.ViewModels.WellLineReportViewModel>
@using Generwell.Modules.GenerwellConstants;

@{
    ViewBag.Title = "Well Line Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        var targetUrl = '/WellDetails/Index/';
        wellLineReportPage.initialize(targetUrl);
    });
</script>


<!-- Loading Modal Start here-->
@Html.Partial("_LoadingPopup")
<!-- Modal ends Here -->

<div class="container wrapper wrapper-content animated fadeInRight mr-20 ml-20">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title border-bottom">
                    <h1> Well Line Reports</h1>
                    <h4><label>Well: </label>  @GenerwellConstants.Constants.WellName</h4>
                </div>
                <br />
                <div class="i-checks chk border-bottom">
                    <span class=""><input type="checkbox" id="followWellId" name="followWell" class="ui-checkboxradio-checked" @GenerwellConstants.Constants.IsFollow value=""> Follow Well<br></span>
                </div>
                <br />
                <div class="ibox-content w-50">
                    <table id="wellLineReportListTableId" class="table table-striped table-bordered table-hover wellLineReportListDataTable" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Id<i class="fa fa-fw fa-sort"></i></th>
                                <th>Well Line Report<i class="fa fa-fw fa-sort"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeU">
                                        <td>@item.id</td>
                                        <td>@item.name</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr class="gradeU">
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <div>
                    <button id="backLineReportId" class="btn button" type="button" data-toggle="Back">Back</button>
                    <button id="taskPageId" class="btn button" type="button" data-toggle="Back">Tasks</button>
                    <button id="locationPageId" class="btn button" type="button" data-toggle="Back">Location</button>                    
                </div>
            </div>
        </div>
    </div>
</div>


