@model List<Generwell.Web.ViewModels.WellViewModel>
@using Generwell.Modules.GenerwellConstants;

@{
    ViewBag.Title = "DataTables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        wellPage.initialize(@TempData["WellId"]);
        var targetUrl = '/WellDetails/Index/';
        dataTable.initialize(wellLineReportListTableId, targetUrl);
    });
</script>


<!-- Loading Modal Start here-->
<div class="modal fade bs-example-modal-sm" id="myPleaseWait" tabindex="-1"
     role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span class="glyphicon glyphicon-time">
                    </span>Please Wait
                </h4>
            </div>
            <div class="modal-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-info
                    progress-bar-striped active"
                         style="width: 100%">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal ends Here -->

<div class="wrapper wrapper-content animated fadeInRight mr-20 ml-20">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h2> Well Line Reports : @TempData["WellName"]</h2>
                </div>
                <br />
                <div>
                    <span class="ml-20"><input type="checkbox" id="followWellId" name="followWell" class="ui-checkboxradio-checked" value="@TempData["IsFollow"]"> Follow Well<br></span>
                </div>
                <br/>
                <div class="ibox-content">
                   
                    @*@if (Model.Count()==0)
                        {
                            @Html.RenderPartialAsync("_NoData");
                        }
                        else
                        {*@
                    <table id="wellLineReportListTableId" class="table table-striped table-bordered table-hover wellLineReportListDataTable" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Well Name</th>
                                <th>Bottom Hole Location</th>
                                <th>Surface Hole Location</th>
                                <th>Active Task Count</th>
                                <th>Lattitude</th>
                                <th>Longitude</th>
                                <th>IsFavorite</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeU">
                                        <td>@item.id</td>
                                        <td>@item.name</td>
                                        <td>@item.bottomHoleLocation</td>
                                        <td>@item.surfaceHoleLocation</td>
                                        <td>@item.activeTaskCount</td>
                                        <td>@item.latitude</td>
                                        <td>@item.longitude</td>
                                        <td>@item.isFavorite</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr class="gradeU">
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                    <td>@GenerwellConstants.Constants.NoData</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                    @* }*@
                    <button class="btn btn-primary" type="button" data-toggle="Back">Back</button>
                    <button class="btn btn-primary" type="button" data-toggle="Back">Location</button>
                    <button class="btn btn-primary" type="button" data-toggle="Back">Back</button>
                </div>
            </div>
        </div>
    </div>
</div>


